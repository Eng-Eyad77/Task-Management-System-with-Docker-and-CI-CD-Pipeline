pipeline {
    agent any

    environment {
        GITHUB_ACCESS_TOKEN = credentials('GITHUB_ACCESS_TOKEN') // ضع هنا الـ Credential ID الذي أنشأته في Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Eng-Eyad7/Testing-Project.git', branch: 'main', credentialsId: 'GITHUB_ACCESS_TOKEN'
            }
        }

        stage('Build') {
            steps {
                echo 'Building application...'
                sh 'mvn clean install' // بناء المشروع باستخدام Maven
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test' // تشغيل الاختبارات
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging application...'
                sh 'mvn package' // إنشاء ملف JAR أو WAR
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                script {
                    sh 'docker build -t myapp:latest .' // بناء صورة Docker
                }
            }
        }

        stage('Deploy Docker Container') {
            steps {
                echo 'Deploying application in Docker container on port 8081...'
                script {
                    sh '''
                    curl -X POST -H "Content-Type: application/json" --data '{
                        "Image": "myapp:latest",
                        "HostConfig": {
                            "PortBindings": {
                                "8081/tcp": [{"HostPort": "8081"}]
                            }
                        }
                    }' http://localhost:2375/containers/create?name=myapp
                    curl -X POST http://localhost:2375/containers/myapp/start
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}
