pipeline {
    agent any

    environment {
        GITHUB_ACCESS_TOKEN = credentials('GITHUB_ACCESS_TOKEN') // Ensure this matches your Jenkins credential ID
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/username/repo.git', branch: 'main', credentialsId: 'GITHUB_ACCESS_TOKEN'
            }
        }

        stage('Build') {
            steps {
                echo 'Building application...'
                // Add your build commands here (e.g., compile Java files)
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add your test commands here (e.g., running unit tests)
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging application...'
                // Add your packaging commands here (e.g., creating a JAR file)
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                script {
                    sh 'docker build -t myapp:latest .'
                }
            }
        }

        stage('Deploy Docker Container') {
            steps {
                echo 'Deploying application in Docker container on port 8081...'
                script {
                    sh '''
                    curl -X POST -H "Content-Type: application/json" --data '{
                        "Image": "myapp:latest",
                        "HostConfig": {
                            "PortBindings": {
                                "8081/tcp": [{"HostPort": "8081"}]
                            }
                        }
                    }' http://localhost:2375/containers/create?name=myapp
                    curl -X POST http://localhost:2375/containers/myapp/start
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}
