pipeline {
    agent any

    environment {
        GITHUB_ACCESS_TOKEN = credentials('MVC_TASK') // Ensure this matches your Jenkins credential ID
    }

    stages {
        stage('Checkout') {
            steps {
                // سحب الكود من المستودع في GitHub
                git url: 'https://github.com/Eng-Eyad77/Testing-Project.git', branch: 'main', credentialsId: 'MVC_TASK'
            }
        }

        stage('Build') {
            steps {
                echo 'Building application...'
                // استخدام Maven لبناء المشروع
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // استخدام Maven لتشغيل الاختبارات
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging application...'
                // استخدام Maven لإنشاء ملف JAR أو WAR
                sh 'mvn package'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                script {
                    // بناء صورة Docker باستخدام ملف Dockerfile في المشروع
                    sh 'docker build -t myapp:latest .'
                }
            }
        }

        stage('Deploy Docker Container') {
            steps {
                echo 'Deploying application in Docker container on port 8081...'
                script {
                    sh '''
                    # نشر الحاوية Docker وتشغيلها على المنفذ 8081
                    curl -X POST -H "Content-Type: application/json" --data '{
                        "Image": "myapp:latest",
                        "HostConfig": {
                            "PortBindings": {
                                "8081/tcp": [{"HostPort": "8081"}]
                            }
                        }
                    }' http://localhost:2375/containers/create?name=myapp
                    curl -X POST http://localhost:2375/containers/myapp/start
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}
